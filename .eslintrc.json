{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "afterEach": true,
    "beforeEach": true,
    "fetch": true,
    "driver": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "max-len": ["error", { "code": 140 }],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
